<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2sp"
    android:layout_marginBottom="2sp"
    android:background="@drawable/quest_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_reward_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_reward_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reward Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_reward_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insert description here" />

        <TextView
            android:id="@+id/item_reward_lvlreq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7" />

        <TextView
            android:id="@+id/item_reward_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500" />

        <TextView
            android:id="@+id/item_reward_rewardId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reward ID" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/item_reward_buyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:text="Buy" />

        <Button
            android:id="@+id/item_reward_deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:text="Delete" />

        <Button
            android:id="@+id/item_reward_grantButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grant" />
    </LinearLayout>
</LinearLayout>