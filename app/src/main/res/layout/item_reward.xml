<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1sp"
    android:layout_marginBottom="1sp"
    android:background="@drawable/reward_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_reward_img"
        android:layout_width="87dp"
        android:layout_height="match_parent"
        android:src="@drawable/icon_treasure_chest_64" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_reward_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reward Name"
            android:fontFamily="@font/roboto_black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_reward_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_black"
            android:text="Insert description here" />

        <TextView
            android:id="@+id/item_reward_lvlreq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_black"
            android:text="7" />

        <TextView
            android:id="@+id/item_reward_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_black"
            android:text="500" />

        <TextView
            android:id="@+id/item_reward_rewardId"
            android:layout_width="wrap_content"
            android:fontFamily="@font/roboto_black"
            android:layout_height="wrap_content"
            android:text="Reward ID" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/item_reward_buyButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/button_background_gy"
            android:fontFamily="@font/roboto_black"
            android:textColor="@color/white"
            android:text="Buy" />

        <Button
            android:id="@+id/item_reward_deleteButton"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@color/white"
            android:background="@drawable/button_background_yr"
            android:fontFamily="@font/roboto_black"
            android:text="Delete" />

        <Button
            android:id="@+id/item_reward_grantButton"
            android:layout_width="wrap_content"
            android:fontFamily="@font/roboto_black"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:text="Grant" />
    </LinearLayout>
</LinearLayout>