<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_quest_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1sp"
    android:layout_marginBottom="1sp"
    android:background="@drawable/quest_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_quest_img"
        android:layout_width="96dp"
        android:layout_height="97dp"
        android:src="@drawable/icon_quest" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_quest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_black"
            android:text="Quest Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_quest_xp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_black"
            android:text="XP: 1337" />

        <TextView
            android:id="@+id/item_quest_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_black"
            android:text="Coins: 69" />

        <TextView
            android:id="@+id/item_quest_assignee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_black"
            android:text="Assignee: N/A" />

        <TextView
            android:id="@+id/item_quest_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_black"
            android:text="Status" />
    </LinearLayout>
</LinearLayout>